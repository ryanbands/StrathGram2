<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/logEmail" android:hint="School email"
        android:inputType="textEmailAddress" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/logPass" android:hint="Password"
        android:inputType="textPassword" android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/logBtn" android:text="Login"
        android:layout_marginTop="20dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/goRegister" android:text="Create account"
        android:layout_marginTop="16dp" android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
