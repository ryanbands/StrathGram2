<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/regEmail" android:hint="School email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/regPass" android:hint="Password"
        android:inputType="textPassword" android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/regBtn" android:text="Register"
        android:layout_marginTop="20dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
